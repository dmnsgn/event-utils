{
  "name": "event-utils",
  "version": "1.0.2",
  "description": "An event utils system written in ES6.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --watch --compilers js:babel/register test/test.js",
    "dev": "watchify -d test/main.js -t [babelify] -o test/build.js",
    "build": "browserify -d src/index.js -t [babelify] -o dist/main.js && uglifyjs dist/main.js -o dist/main.js"
  },
  "devDependencies": {
    "babel": "^5.6.x",
    "babelify": "^6.1.x",
    "browserify": "^10.2.x",
    "chai": "^3.0.x",
    "mocha": "^2.2.x",
    "sinon": "^1.15.x",
    "watchify": "^3.2.x"
  },
  "keywords": [
    "es2015",
    "es6",
    "event",
    "emitter",
    "utils"
  ],
  "author": "Damien Seguin <dmnsgn@gmail.com> (http://dmnsgn.co.uk/)",
  "license": "ISC"
}
